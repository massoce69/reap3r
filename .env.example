# MASSVISION Reap3r - Environment Configuration
# Copy to .env and fill in values

# ─── Database ───
DATABASE_URL=postgresql://massvision:massvision_secret@localhost:5432/massvision_reap3r
DATABASE_POOL_SIZE=20

# ─── Backend ───
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000

# ─── Auth ───
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ─── Agent Protocol ───
AGENT_HMAC_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_HEX_STRING
AGENT_ENROLLMENT_SECRET=CHANGE_ME_ENROLLMENT_TOKEN
AGENT_NONCE_WINDOW_SEC=300

# ─── Redis (job queue / realtime) ───
REDIS_URL=redis://localhost:6379

# ─── Frontend ───
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# ─── Observability ───
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# ─── Zabbix (optional) ───
ZABBIX_API_URL=
ZABBIX_API_TOKEN=

# ─── Email Alerting (optional) ───
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_TO=

# ─── Agent Update Server ───
AGENT_UPDATE_BASE_URL=https://updates.massvision.io
